{
  "name": "bradoyler.com",
  "version": "2.0.1",
  "description": "Static site for bradoyler.com",
  "main": "index.js",
  "scripts": {
    "build-css": "npx tailwindcss -i ./src/assets/input.css -o ./docs/assets/style.css --minify",
    "watch-css": "npx tailwindcss -i ./src/assets/input.css -o ./docs/assets/style.css --watch",
    "build": "npm run build-css && eleventy",
    "start": "concurrently \"eleventy --serve --watch\"",
    "start:withcss": "concurrently \"npm run watch-css\" \"eleventy --serve --watch\"",
    "dev": "npm run start"
  },
  "keywords": [],
  "author": "Brad Oyler <bradoyler@gmail.com> (github.com/bradoyler)",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {}
}
