<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% if title %}{{ title }} - {% endif %}Brad Oyler</title>
    <meta name="description" content="{{ description }}" />
    <link rel="canonical" href="https://www.bradoyler.com{{ page.url }}">
    <meta property="og:site_name" content="{ Brad Oyler }" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:title" content="{{ title }} - Brad Oyler" />
    <meta property="og:url" content="https://www.bradoyler.com{{ page.url }}" />
    <meta property="og:type" content="article" />
    <meta property="og:image" content="https://www.bradoyler.com/assets/images/{{ art }}"/>
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@bradoyler" />
    <meta name="twitter:title" content="{{ title }} - Brad Oyler" />
    <meta name="twitter:description" content="{{ description }}" />
    <meta name="twitter:creator" content="@bradoyler" />
    <meta name="twitter:domain" content="https://www.bradoyler.com" />
    <meta
      name="twitter:image:src"
      content="https://www.bradoyler.com/assets/images/{{ art }}"
    />
    {% include "layouts/_includes/cssloader.njk" %}
  </head>

  <body
    class="bg-gray-100 dark:bg-gray-950 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col font-sans"
  >
    {% include "layouts/_includes/header.njk" %}

    <main class="flex-1">
      {# The article container now uses bg-white for pure white background #}
      <article
        class="max-w-4xl mx-auto my-12 md:my-16 p-8 md:p-12 bg-white dark:bg-gray-800 shadow-xl rounded-lg"
      >
        {# --- ARTICLE HEADER (Title and Metadata) --- #}
        <header
          class="mb-12 border-b border-gray-100 dark:border-gray-700 pb-8"
        >
          <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
            {{ title }}
          </h1>

          <div
            class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400"
          >
            {# Date published #}
            <time datetime="{{ page.date | htmlDateString }}">
              Published: {{ page.date.toLocaleDateString('en-US', { year:'numeric', month: 'short', day: 'numeric' }) }}
            </time>
            {% if modified %}
            <span> / </span>
              <time datetime="{{ modified | htmlDateString }}">
               Updated: {{ modified.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) }}
              </time>
            {% endif %}

            {% if tags %}
            <span class="text-gray-400 dark:text-gray-600">•</span>
            {# List tags, excluding the 'post' collection tag #}
            <div class="flex gap-2">
              {% for tag in tags %} {% if tag != 'post' %}
              <a
                href="/{{ tag | slugify }}/"
                class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200 hover:underline capitalize"
              >
                #{{ tag }}
              </a>
              {% endif %} {% endfor %}
            </div>
            {% endif %}
          </div>
        </header>

        {# --- ARTICLE CONTENT (Body) --- #}
        <div
          class="prose prose-xl dark:prose-invert max-w-none prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-lg prose-img:shadow-md prose-pre:bg-gray-900 prose-pre:text-gray-50"
        >
          {{ content | safe }}
        </div>

        {# --- PREVIOUS/NEXT POSTS NAV --- #}
        <nav
          class="mt-20 pt-12 border-t border-gray-200 dark:border-gray-800 grid grid-cols-2 gap-8 text-sm"
        >
          <div>
            {% if page.previous %}
            <span class="block text-gray-500 dark:text-gray-400 mb-2"
              >← Previous Post</span
            >
            <a
              href="{{ page.previous.url }}"
              class="block text-blue-600 dark:text-blue-400 hover:underline font-medium"
            >
              {{ page.previous.data.title }}
            </a>
            {% endif %}
          </div>
          <div class="text-right">
            {% if page.next %}
            <span class="block text-gray-500 dark:text-gray-400 mb-2"
              >Next Post →</span
            >
            <a
              href="{{ page.next.url }}"
              class="block text-blue-600 dark:text-blue-400 hover:underline font-medium"
            >
              {{ page.next.data.title }}
            </a>
            {% endif %}
          </div>
        </nav>

<!-- Tiny X CTA — truly minimal -->
<div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-800 text-center text-lg text-gray-500 dark:text-gray-500">
  <a href="https://x.com/bradoyler" target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400">
   Follow @bradoyler on X
  </a>
 ||
  <a href="https://x.com/intent/post?text={{ title | urlencode }}&url={{ page.url | absoluteUrl(site.url) | urlencode }}"
     target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400">
    Share this
  </a>
</div>

      </article>

    </main>

    {% include "layouts/_includes/footer.njk" %}
  </body>
</html>
